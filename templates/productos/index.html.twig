{% extends 'base.html.twig' %}

{% block title %}Insertar Productos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .form-group{
        margin: 7% 0;
        font-size: 2em;
    }


    .form-control, .btn{
        font-size: 2.75rem;
    }

    option{
        font-size: 1rem;
        height: auto;
    }

    .titulo{
        width: 100%;
        margin: 3% 0;
        font-size: 33px;
    }
</style>
{{ parent() }}
<div class="example-wrapper">

    <div class="titulo">
        <h1> {{ controller_name }}</h1>
    </div>
    <div class="capa_formulario">
        {{ form(formulario) }} 
    </div>
    
</div>
{% endblock %}
